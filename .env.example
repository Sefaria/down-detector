# Django Configuration
SECRET_KEY=your-secret-key-here-generate-a-real-one
DEBUG=False
# ALLOWED_HOSTS: Comma-separated list of domains. 
# In Coolify, include your custom domain and 'localhost'
ALLOWED_HOSTS=status.sefaria.org,localhost,127.0.0.1

# Security Settings (Optional overrides for local Docker testing)
# CSRF_COOKIE_SECURE=True
# SESSION_COOKIE_SECURE=True
# CSRF_TRUSTED_ORIGINS=https://status.sefaria.org

# Database Configuration
# DATABASE_URL is used by Django. DB_PASSWORD is used by the Postgres docker container.
DB_PASSWORD=changeme
DATABASE_URL=postgres://sefaria:changeme@db:5432/sefaria_status

# Slack Alerting
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SLACK_CHANNEL=sefaria-down

# Status Page
# Used for linking to the status page in Slack alerts
STATUS_PAGE_URL=https://status.sefaria.org

# Health Check Configuration
HEALTH_CHECK_INTERVAL=60
HEALTH_CHECK_RETRIES=3
HEALTH_CHECK_RETRY_DELAY=10
HEALTH_CHECK_RETENTION_DAYS=30

# Service URL Overrides (Optional)
# SEFARIA_HEALTH_URL=https://www.sefaria.org/healthz
# LINKER_HEALTH_URL=https://www.sefaria.org/api/find-refs
# MCP_HEALTH_URL=https://mcp.sefaria.org/healthz
